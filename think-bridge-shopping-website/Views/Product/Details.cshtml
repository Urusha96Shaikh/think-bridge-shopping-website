@model think_bridge_shopping_website.Models.ProductViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="content success-page-cont">
    <div class="container-fluid">

        <div class="row justify-content-center">
            <div class="col-lg-12">

                <!-- Success Card -->
                <div class="card success-card">
                    <div class="card-body">
                        <div class="success-cont">
                            <div class="content">
                                <div class="container-fluid">
                                    <!-- Page Header -->
                                    <div class="page-header">
                                        <div class="row">
                                            <div class="col-sm-12 col-auto">
                                                <h3 class="page-title">Product</h3>
                                                <ul class="breadcrumb">
                                                    <li class="breadcrumb-item"><a href="~/Dashboard/Index">Dashboard</a></li>
                                                    <li class="breadcrumb-item active">View Product</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="content success-page-cont">
                                        <div class="container-fluid">

                                            <div class="row justify-content-center">
                                                <div class="col-lg-8">

                                                    <!-- Success Card -->
                                                    <div class="card success-card">
                                                        <div class="card-body">
                                                            <div class="success-cont row">
                                                                <div class="col-lg-6">
                                                                    <label><strong>Product Name:</strong></label>&nbsp;
                                                                    <label>@Model.product_name</label><br />
                                                                    <label><strong>Price:</strong></label>&nbsp;
                                                                    <label>@Model.product_rate</label><br />
                                                                    <label><strong>Status:</strong></label>&nbsp;
                                                                    <label>@Model.product_is_active_status</label><br />
                                                                    <label><strong>Category:</strong>&nbsp;
                                                                        @Html.DropDownListFor(model => model.product_fk_category_id, ViewBag.ProductCatagories as SelectList,
                                                                           "-Select Categories-", htmlAttributes: new { @class = "form-control", @readonly = true })
                                                                    </label><br />
                                                                </div>
                                                                <div class="col-lg-2">
                                                                    <img src="@Url.Content(@Model.product_img_file_path)" style="width:350px; height:300px;" alt="Img" />
                                                                </div>

                                                            </div>
                                                            <label>@Html.ActionLink("Back To List", "Index", "Product")</label>
                                                        </div>
                                                    </div>
                                                    <!-- /Success Card -->

                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Success Card -->

            </div>
        </div>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
    $(function () {
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        });
        window.applicationBaseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(
                               new Uri(
                                           new Uri(this.Context.Request.Url.GetLeftPart(UriPartial.Authority)),
                                           Url.Content("~/")
                                       ).ToString(), true));
    });
    </script>

}




