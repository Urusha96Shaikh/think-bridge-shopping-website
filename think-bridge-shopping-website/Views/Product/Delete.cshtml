@model think_bridge_shopping_website.Models.ProductViewModel
@{
    ViewBag.Title = "Remove";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

        <div class="content success-page-cont">
            <div class="container-fluid">

                <div class="row justify-content-center">
                    <div class="col-lg-12">

                        <!-- Success Card -->
                        <div class="card success-card">
                            <div class="card-body">
                                <div class="success-cont">
                                    @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="content">
                                            <div class="container-fluid">
                                                <!-- Page Header -->
                                                <div class="page-header">
                                                    <div class="row">
                                                        <div class="col-sm-12 col-auto">
                                                            <h3 class="page-title">Product</h3>
                                                            <ul class="breadcrumb">
                                                                <li class="breadcrumb-item"><a href="~/Dashboard/Index">Dashboard</a></li>
                                                                <li class="breadcrumb-item active">Remove Product</li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12 col-lg-12 col-xl-12">
                                                        <!-- Basic Information -->
                                                        <div class="card container-fluid">
                                                            <div class="card-body center-block">
                                                                @Html.HiddenFor(model => model.Id)
                                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                                @if (ViewBag.Message != null)
                                                                {
                                                                    @ViewBag.Message;
                                                                }
                                                                <div class="row form-row">
                                                                    <div class="col-md-6 form-group">
                                                                        @Html.LabelFor(model => model.product_name, htmlAttributes: new { @class = "control-label col-md-3" })
                                                                        @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control" } })
                                                                        @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger", @style = "padding-left: 16.5%;" })
                                                                    </div>
                                                                    <div class="col-md-6 form-group">
                                                                        @Html.LabelFor(model => model.product_rate, htmlAttributes: new { @class = "control-label col-md-3" })
                                                                        @Html.EditorFor(model => model.product_rate, new
                                                                        {
                                                                            htmlAttributes = new
                                                                            {
                                                                                @class = "form-control",
                                                                                @type = "number"
                                                                            }
                                                                        })
                                                                        @Html.ValidationMessageFor(model => model.product_rate, "", new { @class = "text-danger", @style = "padding-left: 16.7%;" })
                                                                    </div>
                                                                </div>
                                                                <div class="row form-row">
                                                                    <div class="col-md-6 form-group">
                                                                        @Html.LabelFor(model => model.product_fk_category_id, htmlAttributes: new { @class = "control-label col-md-3" })
                                                                        @Html.DropDownListFor(model => model.product_fk_category_id, ViewBag.ProductCatagories as SelectList, "- Select Categories -",
                                                                                                                                   htmlAttributes: new { @class = "form-control select" })
                                                                        @Html.ValidationMessageFor(model => model.product_fk_category_id, "", new { @class = "text-danger", @style = "padding-left: 16.5%;" })
                                                                    </div>
                                                                    <div class="col-md-6 form-group">
                                                                        @Html.LabelFor(model => model.product_image, htmlAttributes: new { @class = "control-label col-md-3" })
                                                                        @Html.EditorFor(model => model.product_image, new { htmlAttributes = new { @class = "form-control", @type = "file", @accept = ".jpg,.jpeg,.png,.bmp" } })
                                                                    </div>
                                                                </div>
                                                                <div class="row form-row">
                                                                    <div class="col-md-6 checkbox form-group">
                                                                        @Html.LabelFor(model => model.product_is_active, htmlAttributes: new { @class = "control-label col-md-3" })
                                                                        <label>
                                                                            @Html.CheckBoxFor(model => model.product_is_active.Value)
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                                <div class="row form-row">
                                                                    <div class="form-group">
                                                                        <div class="col-md-offset-9 col-md-12">
                                                                            <input type="submit" value="Remove Product" class="btn btn-danger" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row form-row">
                                                                    <div class="form-group" style="padding-bottom: 10px;">
                                                                        <div class="col-md-offset-9 col-md-12">
                                                                            <h5>@Html.ActionLink("Back to List", "Index")</h5>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- /Success Card -->

                    </div>
                </div>

            </div>
        </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
    $(function () {
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        });
        window.applicationBaseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(
                               new Uri(
                                           new Uri(this.Context.Request.Url.GetLeftPart(UriPartial.Authority)),
                                           Url.Content("~/")
                                       ).ToString(), true));
    });
    </script>

}





